{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "composite": false,
    "declaration": false,
    "paths": {
      "@triple-win/api": ["packages/data-access/api/src/index.ts"],
      "@triple-win/icons": ["packages/icons/src/index.ts"],
      "@triple-win/query-client": ["packages/data-access/query-client/src/index.ts"],
      "@triple-win/template-sakura": ["packages/templates/sakura/src/index.ts"],
      "@triple-win/template-sakura/styles/*": ["packages/templates/sakura/src/styles/*"],
      "@triple-win/ui": ["packages/ui/src/index.ts"]
    }
  },
  "include": ["libs/**/*", "apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "tmp"]
}
